{
    "include": ["src/**/*.{js,vue}"],
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@": ["./src"],
            "@components": ["./src/components"],
            "@lib": ["./src/lib"],
            "@store": ["./src/store"],
            "@ui": ["./src/ui"]
        },
        "allowJs": true,
        "checkJs": true
    }
}
